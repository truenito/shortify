<p id="notice"><%= notice %></p>

<br>
<%= link_to 'New Url', new_url_path, class: 'pull-right btn btn-success', style: 'margin: 5px 2px; color: white;' %>
<%= link_to 'Top 100 URLS JSON', top_path, class: 'pull-right btn btn-primary', style: 'margin: 5px 2px; color: white;' %>
<br>

<table class='table table-striped '>
  <thead class='thead-dark'>
    <tr>
      <th>Title</th>
      <th>original link</th>
      <th>Shortened link</th>
      <th style="width: 300px">Description</th>
      <th style="width: 70px;">Total Visits</th>

      <th style="width: 240px;" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.title %></td>
        <td><%= url.original_link %></td>
        <td><%= link_to "#{url.shortened_link}", url.shortened_link, target: '_blank', class: 'underline' %></td>
        <td><%= url.description %></td>
        <td><%= url.visit_count %></td>      
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

