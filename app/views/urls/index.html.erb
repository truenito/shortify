<p id="notice"><%= notice %></p>

<h1>Top 100 URLs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>original link</th>
      <th>Shortened link</th>
      <th>Description</th>
      <th>Total Visits</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.title %></td>
        <td><%= url.original_link %></td>
        <td><%= url.shortened_link %></td>
        <td><%= url.description %></td>
        <td><%= url.visit_count %></td>      
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Top 100 URLS JSON', top_path %>
